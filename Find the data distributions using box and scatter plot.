# =========================================================
# DATA DISTRIBUTION VISUALIZATION IN R
# Dataset: iris
# ---------------------------------------------------------
# Boxplots → show spread, median, and outliers
# Scatter plots → show relationships between variables
# =========================================================

# ---- Load Dataset ----
data("iris")

# ---- View Structure and Summary ----
cat("===== Structure of iris Dataset =====\n")
str(iris)
cat("\n===== Summary of iris Dataset =====\n")
print(summary(iris))

# ---- 1. BOX PLOTS ----
# Visualize distribution and outliers for each numeric variable

# Boxplot for Sepal.Length across Species
boxplot(Sepal.Length ~ Species, data = iris,
        main = "Boxplot of Sepal Length by Species",
        xlab = "Species", ylab = "Sepal Length (cm)",
        col = c("lightblue", "lightgreen", "lightpink"),
        border = "darkgray")

# Boxplot for Petal.Length across Species
boxplot(Petal.Length ~ Species, data = iris,
        main = "Boxplot of Petal Length by Species",
        xlab = "Species", ylab = "Petal Length (cm)",
        col = c("orange", "lightyellow", "lightcyan"),
        border = "darkgray")

# ---- 2. SCATTER PLOTS ----
# Show relationships between pairs of variables

# Scatter Plot: Sepal.Length vs Sepal.Width
plot(iris$Sepal.Length, iris$Sepal.Width,
     main = "Scatter Plot: Sepal Length vs Sepal Width",
     xlab = "Sepal Length (cm)",
     ylab = "Sepal Width (cm)",
     pch = 19, col = as.numeric(iris$Species))

legend("topright", legend = levels(iris$Species),
       col = 1:3, pch = 19, bty = "n")

# Scatter Plot: Petal.Length vs Petal.Width
plot(iris$Petal.Length, iris$Petal.Width,
     main = "Scatter Plot: Petal Length vs Petal Width",
     xlab = "Petal Length (cm)",
     ylab = "Petal Width (cm)",
     pch = 19, col = as.numeric(iris$Species))

legend("topleft", legend = levels(iris$Species),
       col = 1:3, pch = 19, bty = "n")

# ---- 3. Optional: Pairwise Scatter Matrix ----
# Shows all numeric relationships at once
pairs(iris[, 1:4],
      main = "Pairwise Scatter Plot Matrix for iris",
      col = as.numeric(iris$Species),
      pch = 19)

# ---- END ----
cat("\nData distribution visualizations created successfully.\n")
